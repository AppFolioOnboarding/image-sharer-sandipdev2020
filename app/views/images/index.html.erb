<div class="centered">
  <h4>Welcome to image upload app</h4>
  <%= link_to 'Add new image', new_image_path %>
  <table class="table">
    <tr>
      <th>Image ID</th>
      <th>Image</th>
    </tr>
    <% @images.each do |image| %>
      <tr>
        <td>
          <label>
            <%= image.id %>
          </label>
        </td>
        <td>
          <%= image_tag(image.url, class: 'image-small') %>
          <p>
            <% image.tag_list.each do |tag| %>
              <%= link_to tag, root_path(tags: tag), class: 'tag-list' %>
            <% end %>
          </p>
        </td>
      </tr>
    <% end %>
  </table>
</div>
<%= link_to 'Add image', new_image_path %>
