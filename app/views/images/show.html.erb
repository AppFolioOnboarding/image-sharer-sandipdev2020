<div class="centered">
  <h3> Imgage uploaded successfully</h3>
  <table class="table">
    <tr>
      <td>
        <strong>Image: <%= @image.id %></strong>
        <br>
        <%= image_tag(@image.url, :class => 'image-small') %>
        <br>
        <% if @image.tag_list.any? %>
          <p>Tags</p>
          <% @image.tag_list.each do |tag| %>
            <%= link_to tag, tagged_path(tag: tag) %>
            <br>
          <% end %>
        <% end %>
      </td>
      <td>
        <%= button_to 'Delete', @image, method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
    <tr>
      <td>
        <%= link_to 'Back', images_path %>
      </td>
    </tr>
  </table>
</div>
